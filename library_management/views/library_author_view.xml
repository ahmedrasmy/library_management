<odoo>
    <record id="library_author_view_tree" model="ir.ui.view">
         <field name="name" > library author tree</field>
        <field name="model" >library.author</field>
        <field name="arch" type="xml">
            <tree multi_edit="1">
                <field name="name"/>
                <field name="biography" />
            </tree>

        </field>
    </record>

    <record id="library_author_view_form" model="ir.ui.view">
         <field name="name" > library author form</field>
        <field name="model" >library.author</field>
        <field name="arch" type="xml">
            <form >
                <sheet>
                    <div class="oe_title">
                         <label for="name"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                    </div>
                    <group>
                        <field name="biography"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="library_author_action" model="ir.actions.act_window">
        <field name="name">Author</field>
        <field name="res_model">library.author</field>
    </record>

    <menuitem
        id = 'library_author_menu_item'
        name = 'Authors'
        parent = "library_menu"
        action = "library_author_action"
    />
</odoo>